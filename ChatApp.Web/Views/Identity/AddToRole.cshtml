@model AddToRoleViewModel
@{
    ViewData["Title"] = "Add To Role";
}

<h2>Add @Model.User.UserName (@Model.User.Email) To Role</h2>

<form method="post">
    <select name="role" asp-items="Model.Roles" class="form-control"></select>
    <br />
    <button type="submit" class="btn btn-primary">Save Role</button>
</form>
